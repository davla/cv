{% macro contact_info(contact) %}
    <ul>
        {% for item in contact %}
            <li>
                <span class="icon-{{ item.icon }}"></span>
                {% if item.href %}
                    <a href="{{ item.href }}">{{ item.text }}</a>
                {% else %}
                    {{ item.text }}
                {% endif %}
            </li>
        {% endfor %}
    </ul>
{% endmacro %}
