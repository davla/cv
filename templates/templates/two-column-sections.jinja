{% extends 'layout/simple.jinja' %}

{% from 'macros/lib.jinja' import contact_info %}
{% import 'macros/chronology.jinja' as chronology %}

{% block content %}
    <article class="header">

        <div class="personal">
            <p class="name">
                {{ header.first_name }} {{ header.last_name }}
            </p>

            <p class="title">{{ header.title }}</p>
            <p class="location">{{ header.location }}</p>
        </div>

        <div class="contact">
            {{ contact_info(contact) }}
        </div>

        <p class="summary">{{ header.summary }}</p>

        <div class="picture">
            <img src="{{ header.picture_url }}" alt="picture" />
        </div>
    </article>

    <article class="main-section">
        <h2>Work experience</h2>
        {% call(item, class) chronology.chronology(work) %}
            {{ chronology.work_item(item, class) }}
        {% endcall %}
    </article>
{% endblock %}
