{% extends 'layout/sidebar.jinja' %}

{% from 'macros/skill-level.jinja' import skill_level %}

{% block sidebar %}
    <section class="header">

        <img src="{{ header.picture_url }}" alt="picture" />

        <div class="name">
            {{ header.first_name }} {{ header.last_name }}
        </div>

        <div class="title">{{ header.title }}</div>
        <div class="location">{{ header.location }}</div>

        <p class="summary">
            {{ header.summary }}
        </p>
    </section>

    <section class="contact">
        <ul>
            {% for item in contact %}
                <li>
                    <span class="icon-{{ item.icon }}"></span>
                    {% if item.href %}
                        <a href="{{ item.href }}">{{ item.text }}</a>
                    {% else %}
                        {{ item.text }}
                    {% endif %}
                </li>
            {% endfor %}
        </ul>
    </section>

    <section class="interests">
        <ul>
            {% for item in interests %}
                <li>
                    <span class="icon-{{ item.icon }}"></span>
                    {{ item.name | capitalize }}
                </li>
            {% endfor %}
        </ul>
    </section>

    <section class="languages">
        {% for item in languages %}
            <div class="lang-name">{{ item.name | capitalize }}</div>
            {{ skill_level(item.level, 'sidebar-skill-level') }}
        {% endfor %}
    </section>

{% endblock %}
